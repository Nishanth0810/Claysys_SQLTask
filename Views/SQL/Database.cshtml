@model Claysys_SQLTask.Models.Database

@{
    ViewData["Title"] = "Database";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Database</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Database">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label for="client">Client</label>
                <select id="client" asp-for="ClientID" class="form-control">
                    <option value="">Select Client</option>
                    @foreach (var client in ViewBag.Clients)
                    {
                        <option value="@client.ClientID">@client.ClientName</option>
                    }
                </select>
            </div>
            <div class="form-group mt-2">
                <label for="project">Project</label>
                <select id="project" asp-for="ProjectID" class="form-control" disabled>
                    <option value="">Select Project</option>
                </select>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DataBaseName" class="control-label">Database name</label>
                <input asp-for="DataBaseName" class="form-control" />
                <span asp-validation-for="DataBaseName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" style="background-color:#16a358;color:white" value="Create" class="btn btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#client').change(function () {
                var clientId = $(this).val();
                if (clientId) {
                    $.post('/SQL/GetProjects', { clientId: clientId }, function (data) {
                        var projectSelect = $('#project');
                        projectSelect.empty().append('<option value="">Select Project</option>');
                        $.each(data, function (index, project) {
                            projectSelect.append('<option value="' + project.projectID + '">' + project.projectName + '</option>');
                        });
                        projectSelect.prop('disabled', false);
                    });
                } else {
                    $('#project').empty().append('<option value="">Select Project</option>').prop('disabled', true);
                }
            });
        });
    </script>
}


