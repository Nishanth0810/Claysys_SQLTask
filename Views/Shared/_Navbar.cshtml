        position: relative;
        top: 10px;
    }

    .GearIcon {
        margin-right: 10px;
    }

    .Usename {
        margin-left: 10px;
        position: relative;
        top: 4px;
    }

    a {
        color: black;
        text-decoration: none; 
    }

        a:hover {
            color: black;
        }

    html, body, body.home {
        font-family: "Roboto", sans-serif !important;
        margin: 0 auto;
        padding: 0;
    }
