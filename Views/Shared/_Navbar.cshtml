                            <a  class="settings-icon">
                                <i class="fa-solid fa-gear" style="color:black"></i>
                            </a>
                            <div class="settingDropDown " style="display:none">
                                <ul class="nav flex-column">
                                    <li class="nav-item"><a class="nav-link">Shared with...</a></li>
                                    <li class="nav-item"><a class="nav-link">Edit page</a></li>
                                    <li class="nav-item"><a class="nav-link">Add a page</a></li>
                                    <li class="nav-item"><a class="nav-link">Add an app</a></li>
                                    <li class="nav-item"><a href="" id="siteContentLink"  class="nav-link">Site Content</a></li>
                                    <li class="nav-item"><a class="nav-link">Site settings</a></li>
                                </ul>
                            </div>
                        </button> *@
                        <div class="Usename">
                            <a href="#" class="settings-icon" style="color:black ; text-decoration:none ; font-size:15px">
                                <p> @User.Identity.Name</p>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right drop-user">
                                <div class="dp-info">
                                    <img src="#" class="img-fluid dp-img-main">
                                    <p>
                                    <p> @User.Identity.Name</p>
                                        <a href="#">manoj.ranjan@claysys.in</a>
                                    </p>
                                </div>

                                <div class="col-xs-12 profile-more">
                                    <div class="col-xs-6 sec bl-none">
                                        <a href="#" onclick="popupFunction()">
                                            <i class="fa fa-cog" aria-hidden="true"></i>
                                            <p>Settings</p>
                                        </a>
                                    </div>
                                    <div class="col-xs-6 sec br-none bl-none">
                                        <a href="#" onclick="sendMeout()">
                                            <i class="fa fa-sign-out fa-sign-out-alt" aria-hidden="true"></i>
                                            <p>Logout</p>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ClaysysForms - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .Subnav {
        position: absolute !important;
        display: none;
        top: 0 !important;
        right: 0;
        left: 100%;
        border: 1px solid rgba(0, 0, 0, .15);
        width: 100%;
    }

    .settings-icon {
        font-size: 20px;
        right: 0;
    }

    .GearandName {
        display: flex;
